# ====================================
# PATH
# ====================================

# ------------------------------------
# General
# ------------------------------------
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin
export PATH=$PATH:$HOME/bin
export PATH=$PATH:$HOME/src/github.com/tcnksm/scripts/bin

# ------------------------------------
# Emacs Cask
# ------------------------------------
export PATH=~/.cask/bin:$PATH

# ------------------------------------
# Heroku toolbelt
# ------------------------------------
export PATH="/usr/local/heroku/bin:$PATH"

# ====================================
# ENVIRONMENT
# ====================================

# ------------------------------------
# LANGUAGE
# ------------------------------------
export LANG=ja_JP.UTF-8
export LANG=en_US.UTF-8

# ------------------------------------
# EDITOR
# ------------------------------------
export EDITOR='/usr/local/bin/emacs -nw'

# ====================================
# Language
# ====================================

# ------------------------------------
# Ruby
# ------------------------------------
if [ -d ~/.rbenv ]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init - zsh)"
fi

# ------------------------------------
# Go
# ------------------------------------
export GOVERSION=1.6.2
export GOROOT=${HOME}/.go/${GOVERSION}
export GOPATH=${HOME}
export PATH=${GOROOT}/bin:${GOPATH}/bin:${PATH}

# ------------------------------------
# Rust
# ------------------------------------
# https://www.rustup.rs/
source $HOME/.cargo/env > /dev/null
export RUST_SRC_PATH=${HOME}/.rust/src

# ------------------------------------
# node.js
# ------------------------------------
if [[ -f ~/.nodebrew/nodebrew ]]; then
    export PATH=$HOME/.nodebrew/current/bin:$PATH
    nodebrew use stable
fi

# ====================================
# TOOL
# ====================================

# ------------------------------------
# docker-machine
# ------------------------------------
eval "$(docker-machine env default)"

# ------------------------------------
# peco
# ------------------------------------
for f (~/.dotfiles/peco/*.zsh) source "${f}"
bindkey '^r' peco-select-history
bindkey '^j' peco-ghq
bindkey '^b' peco-git-branch-checkout

# ------------------------------------
# direnv
# ------------------------------------
eval "$(direnv hook zsh)"
